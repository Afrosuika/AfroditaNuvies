<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/menuPrincipalTemporades"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:paddingLeft="4dp"
    	 		android:paddingRight="4dp"
    	 		android:paddingTop="4dp"
    	 		android:paddingBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/button_background"
                android:src="@drawable/mainmenu_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/temporades" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/menuPrincipalVestits"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:paddingLeft="4dp"
    	 		android:paddingRight="4dp"
    	 		android:paddingTop="4dp"
    	 		android:paddingBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/button_background"
                android:src="@drawable/mainmenu_vestits" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/vestitsnuvia" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/menuPrincipalMides"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:paddingLeft="4dp"
    	 		android:paddingRight="4dp"
    	 		android:paddingTop="4dp"
    	 		android:paddingBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/button_background"
                android:src="@drawable/mainmenu_mides" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/prendremides" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/menuPrincipalQuiSom"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:paddingLeft="4dp"
    	 		android:paddingRight="4dp"
    	 		android:paddingTop="4dp"
    	 		android:paddingBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/button_background"
                android:src="@drawable/mainmenu_quisom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/quisom" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/menuPrincipalDades"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:paddingLeft="4dp"
    	 		android:paddingRight="4dp"
    	 		android:paddingTop="4dp"
    	 		android:paddingBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/button_background"
                android:src="@drawable/mainmenu_dades" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/dadescontacte" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>